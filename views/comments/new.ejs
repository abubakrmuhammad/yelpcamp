<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center">Add a New Comment to <%= campground.name %></h1>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <form action="/campgrounds/<%= campground._id %>/comments" method="post" class="py-4">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" id=""
          placeholder="Comment" />
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-primary btn-lg" type="submit">Submit</button>
        </div>
      </form>

      <a href="/campgrounds">View all Campgrounds</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
