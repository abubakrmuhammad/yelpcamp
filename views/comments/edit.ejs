<% include ../partials/header %>

<div class="container">
  <h1 style="text-align: center">Edit Comment</h1>
  <div class="row">
    <div class="col-md-4 offset-md-4">
      <form
        action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT"
        method="post"
        class="py-4"
      >
        <div class="form-group">
          <input
            class="form-control"
            type="text"
            name="comment[text]"
            id=""
            value="<%= comment.text %>"
            placeholder="Comment"
          />
        </div>
        <div class="form-group">
          <button class="btn btn-block btn-primary btn-lg" type="submit">Submit</button>
        </div>
      </form>

      <a href="/campgrounds">View all Campgrounds</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
